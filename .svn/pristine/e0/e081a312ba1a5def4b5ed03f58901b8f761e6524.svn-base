<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yzf.Cpaypos.ui.activitys.CgiBindCardActivity">

    <include layout="@layout/title_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:divider="@drawable/divider_horizontal"
                    android:dividerPadding="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:visibility="gone">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="真实姓名：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_name_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入姓名"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:visibility="gone">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身份证号码：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_idno_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入身份证号"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信用卡卡号 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_cardno_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入信用卡号"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CVN2 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_cvn2_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="信用卡背后3位CVN2"
                            android:inputType="number"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效期 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_expdate_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="4位有效期（月年）"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:visibility="gone">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发卡银行 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_bankname_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="发卡银行"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账单日 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_statementday_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="账单日"
                            android:inputType="number"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="还款日 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_repaymentday_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="还款日"
                            android:inputType="number"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号码 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_phoneno_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="银行卡预留手机号"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cgibindcard_code_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <TextView
                            style="@style/text_normal_color_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="验证码 ：" />

                        <com.xw.repo.xedittext.XEditText
                            android:id="@+id/cgibindcard_code_tv"
                            style="@style/text_XEditText_style"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入验证码"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="5dp" />

                        <com.yzf.Cpaypos.widget.StateButton
                            android:id="@+id/cgibindcard_getcode_bt"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:text="验证码"
                            android:textColor="@color/text_white"
                            android:textSize="12sp"
                            app:normalBackgroundColor="@color/theme"
                            app:pressedBackgroundColor="@color/light_theme"
                            app:radius="5dp"
                            app:unableBackgroundColor="@color/text_gray" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                style="@style/text_tip_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="*注：添加信用卡即做一笔10元的消费交易做为验证信用卡的正确性"
                android:textColor="@color/text_red"
                android:visibility="gone" />

            <com.yzf.Cpaypos.widget.StateButton
                android:id="@+id/cgibindcard_confirm_bt"
                style="@style/button_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="添加信用卡"
                app:normalBackgroundColor="@color/theme"
                app:pressedBackgroundColor="@color/light_theme"
                app:radius="5dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
